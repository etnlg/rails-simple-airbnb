<div class = "container mt-2">
  <div>
    <h1>All our flat 🏠 (<%= @flats.count %>)</h1>
    <h2><i class="fa-solid fa-square-plus"></i>   <%= link_to "Add yours!", new_flat_path %>   <i class="fa-solid fa-square-plus"></i></h2>
  </div>
  <% @flats.each do |flat| %>
    <div class = "mt-3 border rounded shadow-sm">
      <div class = "m-3">
        <h2><%= flat.name %></h2>
        <p><%= flat.address %></p>
        <p><i class="fa-solid fa-user"></i> <%= flat.number_of_guests %>    <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %></p>
        <%= link_to "More info", flat %>
      </div>
    </div>
  <% end %>
</div>
